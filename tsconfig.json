{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es5",
      "lib": ["es5", "es6", "esnext", "scripthost", "es2015.promise", "es2017.sharedmemory"],
      "strict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "alwaysStrict": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "sourceMap": true,
      "declaration": true,
      "importHelpers": true,
      "listFiles": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true
    },
    "include": ["src"]
  }
