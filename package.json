{
    "name": "tight",
    "version": "1.0.0",
    "description": "Serialization library for JS",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "browser": "dist/index.umd.js",
    "engines": {
        "node": ">=8.0"
    },
    "scripts": {
        "test:debug": "karma start ./karma.debug.conf.js",
        "ci": "karma start ./karma.ci.conf.js",
        "test:node": "mocha --opts mocha.opts test/**/*.spec.ts",
        "lint": "tslint {src,test}/**/*.ts",
        "format": "tslint {src,test}/**/*.ts --fix",
        "build": "tsc -p ./tsconfig.build.json --module commonjs && rollup -c rollup.config.js",
        "codecov": "codecov < coverage/cobertura-coverage.xml",
        "gendoc": "typedoc ./src --target es5 --out /dist/docs --name tight.js --hideGenerator"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/chai-spies": "^1.0.0",
        "@types/mocha": "^5.2.6",
        "chai": "^4.2.0",
        "chai-spies": "^1.0.0",
        "codecov": "^3.3.0",
        "commitlint": "^7.5.2",
        "express": "^4.16.4",
        "express-middleware-rollup": "^2.0.0",
        "husky": "^2.1.0",
        "karma": "^4.1.0",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage-istanbul-reporter": "^2.0.5",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.5",
        "karma-puppeteer-launcher": "^1.0.4",
        "karma-rollup-preprocessor": "^7.0.0",
        "karma-sourcemap-loader": "^0.3.7",
        "lint-staged": "^8.1.5",
        "mocha": "^6.1.4",
        "prettier": "^1.17.0",
        "puppeteer": "^1.15.0",
        "rollup": "^1.10.1",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-istanbul": "^2.0.1",
        "rollup-plugin-node-resolve": "^4.2.3",
        "rollup-plugin-typescript2": "^0.21.0",
        "rollup-plugin-uglify": "^6.0.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.1.0",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typedoc": "^0.14.2",
        "typescript": "^3.4.5"
    },
    "lint-staged": {
        "{src,test}/**/*.ts": [
            "npm run format",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/y1j2x34/tight.git"
    },
    "keywords": [
        "serialization",
        "binary"
    ],
    "files": [
        "dist"
    ],
    "author": "'y1j2x34' <y1j2x34@qq.com> (http://www.vgerbot.com/)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/y1j2x34/tight/issues"
    },
    "homepage": "https://github.com/y1j2x34/tight#readme"
}
