{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier",
        "tslint-plugin-prettier"
    ],
    "rules": {
        "object-literal-sort-keys": false,
        "no-var-requires": false,
        "no-console": false,
        "ordered-imports": false,
        "interface-name": false,
        "max-classes-per-file": false,
        "no-bitwise": false,
        "no-empty-interface": false,
        "prettier": [true, {
            "singleQuote": true,
            "parser": "typescript",
            "tabWidth": 4
        }],
        "no-namespace": false,
        "forin": false
    }
}
